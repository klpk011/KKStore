<% Product.all.last(12).each do |product| %>
    <!-- <link href="//netdna.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet"> -->
    <div  class="col-xs-6 col-sm-3">
        <div class="cuadro_intro_hover " style="background-color:#cccccc;">
            <p style="text-align:center; margin-top:0px;">
                <%= link_to product_path(product) do  %>
                    <% if product.photos.present? %>
                        <%= image_tag(product.photos[0].avatar.thumb.url, class: "thumb") %>
                    <% else %>
                        <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumb") %>
                    <% end %>
                <% end %>
            </p>

            <div class="caption">
                <div class="blur"></div>
                <div class="caption-text">
                    <h3 style="border-top:2px solid white; border-bottom:2px solid white; padding:10px;"><%= link_to(product.title, product_path(product), class: "see btn",  :method => :get ) %></h3>
                    <p><%= product.description%></p>
                    <% if product.quantity.present? && product.quantity > 0 %>
                        <%#= link_to(content_tag(:i, "", class: "fa fa-shopping-cart fa-4x"), add_to_cart_product_path(product), :method => :post) %>
                        <%= link_to("加入购物车",add_to_cart_product_path(product), :method => :post, :class => "btn btn-default") %>
                    <% else %>
                        已售馨
                 <% end %>
                </div>
            </div>
        </div>
    </div>

<% end %>

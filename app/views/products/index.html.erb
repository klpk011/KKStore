  <div class="dropdown clearfix pull-left">
    <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenuDivider" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
      商品排序
        <span class="caret"></span>
    </button>
    <ul class="dropdown-menu" aria-labelledby="dropdownMenuDivider">
        <li>
            <%= link_to("新品", products_path) %>
        </li>
        <li>
            <%= link_to("销量", products_path(:order => "by_product_quantity")) %>

        </li>
        <li>
            <%= link_to("价格", products_path(:order => "by_product_price")) %>
        </li>
    </ul>
</div>

<div class="row">


    <% @products.each do |product| %>

        <div class="col-xs-6 col-md-3">
            <%= link_to product_path(product) do %>
            <!-- <a href="#" data-toggle="modal" data-target=".bs-example-modal-lg"> -->
                <% if product.photos.present? %>
                    <%= image_tag(product.photos[0].avatar.thumb.url, class: "thumbnail") %>
                <% else %>
                    <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
                <% end %>
            <% end %>
            <%= product.title %> ￥ <%= product.price %>
            <h6>分类:<%= product.category.name %></h6>
        </div>
    <% end %>

</div>





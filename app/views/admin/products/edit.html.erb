<h2> edit product</h2>
<%= simple_form_for [:admin, @product] do |f| %>
    <div class="group">
        <%= f.input :title %>
    </div>
    <div class="group">
        <%= f.input :description %>
    </div>

    <div class="group">
        <%= f.input :quantity %>
    </div>
    <div class="group">
        <%= f.input :price %>
    </div>

    <% if @product.photos.present? %>
        <span>目前商品图</span><br>
        <%#= image_tag(@product.photos.thumb.url) %>
        <% @product.photos.each do |p| %>
          <%= image_tag p.avatar.thumb.url %><br>
        <% end %>
    <% end %>

    <div class="group">
      <%#= f.input :image, as: :file %>
      <%= f.label :avatar %><br>
      <%= f.file_field :avatar, :multiple => true, name: "photos[avatar][]" %>
    </div>

    <div class="group">
      <%= f.select  :category_id, @categories %>
    </div>
    <%= f.submit "Submit", data: { disable_with: "Submitting..." } %>

<% end %>
